<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Notice"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@color/maColor"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/text_view_name"
                android:text="@string/name_workout"
                android:layout_height="wrap_content"
                style="@style/TEXTVIEW_STYLE"/>
            <EditText
                android:id="@+id/string_name_workout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/EDITTEXT_STYLE"/>
        </LinearLayout>


        <View
            android:background="#66bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/text_view_weights"
                android:text="@string/weight_workout"
                android:layout_height="wrap_content"
                style="@style/TEXTVIEW_STYLE"/>
            <EditText
                android:id="@+id/double_weight_workout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                style="@style/EDITTEXT_STYLE"/>
        </LinearLayout>

        <View
            android:background="#66bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/text_view_sets"
                android:text="@string/sets_workout"
                android:layout_height="wrap_content"
                style="@style/TEXTVIEW_STYLE"/>
            <EditText
                android:id="@+id/integer_sets_workout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                style="@style/EDITTEXT_STYLE"/>
        </LinearLayout>

        <View
            android:background="#66bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/text_view_reps"
                android:text="@string/reps_workout"
                android:layout_height="wrap_content"
                style="@style/TEXTVIEW_STYLE"/>
            <EditText
                android:id="@+id/integer_reps_workout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                style="@style/EDITTEXT_STYLE"/>
        </LinearLayout>

    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 확인, 취소 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">
        <Button
            android:id="@+id/button_cancel"
            android:text="@string/cancel"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:padding="16sp"
            android:gravity="center"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:background="#00000000"/>
        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/button_confirm"
            android:text="@string/confirm"
            android:textSize="15sp"
            android:textColor="@color/maColor"
            android:padding="16sp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_weight="50"
            android:layout_width="0sp"
            android:layout_height="53sp"/>
    </LinearLayout>
    <!--// 확인, 취소 버튼 -->
</LinearLayout>